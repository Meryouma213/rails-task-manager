<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<p><%= @task.completed ? "Completed" : "Not Completed" %></p>
<%= link_to 'Back to tasks', tasks_path %> |
<%= link_to "Edit this task", edit_task_path(@task) %> |
<%= link_to "Remove this task", delete_task_path(@task), data: { turbo_method: :delete, turbo_confirm: "Are you sure ?" } %>
